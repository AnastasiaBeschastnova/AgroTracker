<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:background="@color/light_green"
    android:clickable="true"

    android:focusable="true"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="5dp"
    android:paddingEnd="10dp"
    android:paddingBottom="5dp">


        <TextView
            android:id="@+id/field"
            style="@style/textview_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Поле (номер)"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/guidelineCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/worktime"
            style="@style/textview_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Время"
            android:ellipsize="end"
            android:layout_marginStart="15dp"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guidelineCenter"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/worktype"
            style="@style/textview_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Тип обработки"
            android:textSize="18dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintEnd_toStartOf="@+id/guidelineCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/field" />

        <TextView
            android:id="@+id/fuel"
            style="@style/textview_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Топливо"
            android:textSize="18dp"
            android:ellipsize="end"
            android:layout_marginStart="15dp"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guidelineCenter"
            app:layout_constraintTop_toBottomOf="@+id/culture" />

        <TextView
            android:id="@+id/technic"
            style="@style/textview_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Техника"
            android:textSize="18dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintEnd_toStartOf="@+id/guidelineCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/worktype" />

        <TextView
            android:id="@+id/culture"
            style="@style/textview_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Культура"
            android:textSize="18dp"
            android:ellipsize="end"
            android:layout_marginStart="15dp"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guidelineCenter"
            app:layout_constraintTop_toBottomOf="@+id/worktime" />



        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>