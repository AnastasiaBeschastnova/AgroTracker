<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="30dp">

        <TextView
            style="@style/textview_style"
            android:id="@+id/map"
            android:text="//здесь будет карта//"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:background="@color/light_green"
            android:layout_marginBottom="20dp"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:gravity="center"/>
        <TextView
            style="@style/textview_style"
            android:id="@+id/field"
            android:text="Поле (номер):"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:background="@color/light_green"
            android:layout_marginBottom="5dp"
            android:layout_width="350dp" />

        <TextView
            style="@style/textview_style"
            android:id="@+id/worktype"
            android:text="Тип обработки:"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:background="@color/light_green"
            android:layout_marginBottom="5dp"
            android:layout_width="350dp"/>

        <TextView
            style="@style/textview_style"
            android:id="@+id/culture"
            android:text="Культура:"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:background="@color/light_green"
            android:layout_marginBottom="5dp"
            android:layout_width="350dp"/>

        <TextView
            style="@style/textview_style"
            android:id="@+id/technic"
            android:text="Техника:"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:background="@color/light_green"
            android:layout_marginBottom="5dp"
            android:layout_width="350dp"/>

        <TextView
            style="@style/textview_style"
            android:id="@+id/fuel"
            android:text="Топливо, л: "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:background="@color/light_green"
            android:layout_marginBottom="5dp"
            android:layout_width="350dp"/>
        <TextView
            style="@style/textview_style"
            android:id="@+id/worktime"
            android:text="Время обработки: "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:background="@color/light_green"
            android:layout_marginBottom="5dp"
            android:layout_width="350dp"/>

        <Button
            style="@style/button_style"
            android:id="@+id/button_back"
            android:text="Назад"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_gravity="center"/>
    </LinearLayout>

</ScrollView>